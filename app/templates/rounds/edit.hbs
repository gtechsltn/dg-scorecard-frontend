<h2>Edit</h2>
<div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><small>{{#link-to
            'courses.view' model.course.id
            class="card-link"}}{{model.course.name}}{{/link-to}}</small><span
            class="pull-right"><small>{{moment-format model.updatedAt 'MMMM DD, YYYY'}}</small></span></h3>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th></th>
              <th>F</th>
              <th>+/-</th>
              {{#each model.sortedScores as |score|}}
                <th>{{score.hole.number}}</th>
              {{/each}}
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{{model.user.name}}</td>
              <td>{{model.totalStrokes}}</td>
              <td>{{model.score}}</td>
              {{#each model.sortedScores as |score|}}
                <td>
                  <div class="form-group">
                    <div class="input-group">
                      {{input value=score.strokes class="form-control"}}
                    </div>
                  </div>
                </td>
              {{/each}}
            </tr>
            <tr>
              <td>Distance</td>
              <td></td>
              <td></td>
              {{#each model.sortedScores as |score|}}
                <td>{{score.hole.distance}}</td>
              {{/each}}
            </tr>
            <tr>
              <td>Par</td>
              <td></td>
              <td></td>
              {{#each model.sortedScores as |score|}}
                <td>{{score.hole.par}}</td>
              {{/each}}
            </tr>
          </tbody>
        </table>
      </div>
        <button class="btn btn-primary" {{action 'saveRound' model}}>Save</button>
    </div>
  </div>
</div>
